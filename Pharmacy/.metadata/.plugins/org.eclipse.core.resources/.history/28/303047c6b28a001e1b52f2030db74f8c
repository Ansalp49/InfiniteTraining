<script>
window.onload = function(){
	var saleButton = document.getElementById('form:salebutton');
	saleButton.hidden=true;
	saleButton.style.display='none';
	salebutton.value = '';
}
</script>
<script>
function changeArrow(){
	var idOrder = document.getElementById('form:idOrder');
    var arr1 = document.getElementById('form:arr1');
    var arr2 = document.getElementById('form:arr2');
    if (idOrder.value === 'desc') {
    	arr1.style.display='none';
    } else {
    	arr2.style.display='none';
    }
}
</script>
<script>
	function validateForm() {
		var searchInput = document.getElementById('form1:searchInput').value;
		if (!searchInput) {
			alert('Please enter a value.');
			return false;
		}
		return true;
	}
</script>
<script>
    function hideAlert() {
        var alertDiv = document.querySelector('.alert');
        if (alertDiv) {
            alertDiv.style.display = 'none';
        }
    }
</script>
<script>
    function hideTable() {
        document.getElementById('form:tableContainer').style.display = 'none';
    }
    function showTable() {
        document.getElementById('form:tableContainer').style.display = 'block';
    }
</script>
